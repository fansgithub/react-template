{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "removeComments": false,
        "rootDirs": ["./src"],
        "baseUrl": "./src",
        "paths": {
            "@constants/*": ["constants/*"],
            "@components/*": ["components/*"],
            "@services/*": ["services/*"],
            "@shared/*": ["shared/*"],
            "@views/*": ["views/*"],
            "@store/*": ["store/*"],
            "@utils/*": ["utils/*"],
            "@locales/*": ["locales/*"],
            "@theme": ["styles/theme.less"],
            "ajax": ["services/index"]
        },
        "jsx": "react",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "lib": ["es7", "dom"],
        "skipLibCheck": true,
        "typeRoots": ["node", "node_modules/@types", "./@types"]
    }
}
